{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<nav class="main-nav">
    {{> "menu-activator-icon"}}
</nav>

<header class="main-header js-blog-bg-image {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div class="main-header-content">
        {{#if @blog.logo}}
        <div class="post-logo-container">
            <a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>
        </div>
        {{/if}}
        <h1 class="page-title js-bg-check"><span>{{@blog.title}}</span></h1>
        <h2 class="page-description js-bg-check"><span>{{@blog.description}}</span></h2>

        <div class="header-social-icons">
            <a href="https://twitter.com/neopstar" title="Twitter profile @neopstar"><i class="fa fa-fw fa-twitter"></i></a>
            <a href="https://github.com/selvakumarEsra" title="Github profile - @selvakumarEsra"><i class="fa fa-fw fa-github"></i></a>
            <a href="https://plus.google.com/u/0/+selvaKumaresra" title="Google plus profile - Selvakumar Esra"><i class="fa fa-fw fa-google-plus"></i></a>
            <a href="mailto:selvakumar.esra@gmail.com" title="Email Selvakumar Esra"><i class="fa fa-fw fa-envelope"></i></a>
            <a href="https://www.youtube.com/channel/UCZ6WLZlwgF36ireZSZu2ecg" title="Youtube Channel - @Selvakumar Esra"><i class="fa fa-fw fa-youtube-play"></i></a>
            <a href="http://selvakumaresra.herokuapp.com/rss/" title="RSS Feed - selvakumaresra.com/rss/"><i class="fa fa-fw fa-rss"></i></a>
        </div>

    </div>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content home-template" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>

